extends layout

block content
  #container
    #row.col-xs-12
      #heading_div.col-xs-10.col-sm-offset-1
        h1 GENETIC ALGORITHM

    #row.col-xs-12
      #table_div.col-xs-6.col-sm-offset-3
        p#genetic
        table.table
          thead
            tr
              th Generation #
              th Fitness
              th Current
          tbody
            tr
              td(id='evo')
              td(id='fit')
              td(id='cur')

    #row.col-xs-12
      #result_div.col-xs-6.col-sm-offset-3
        .progress
          .progress-bar(role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100") 0%
        p#result

    #row.col-xs-12
      #input_div.col-xs-6.col-sm-offset-3
        .input-group
          input(type='text' id='string' class='form-control' placeholder='Type a word..')
          span.input-group-btn
            button.btn.btn-default(type='button' id='button') Go!
